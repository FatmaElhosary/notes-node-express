<%- include('./header.ejs') %>

<div class="container my-5 py-5">
    <div class="col-md-5 m-auto text-center">
        <form action="/handleSignUp" method="POST">
            <div class="form-group">
                <input placeholder="Enter your name" value="<%= oldInputs.name %>" name="name" type="text" class="<%= MessageError.find(e=>e.param=='name')?'is-invalid':'' %>   form-control">
            </div>
            <div class="form-group">
                <input placeholder="Enter email" type="email" value="<%= oldInputs.email %>" name="email" class="<%= MessageError.find(e=>e.param=='email')?'is-invalid':'' %> form-control">
            </div>
            <div class="form-group">
                <input placeholder="Enter you password" type="password" value="<%= oldInputs.password %>" name="password" class="<%= MessageError.find(e=>e.param=='password')?'is-invalid':'' %> form-control">
            </div>
            <div class="form-group">
                <input placeholder="confirm Password"  type="password" value="<%= oldInputs.confirmPassword %>" name="confirmPassword" class="<%= MessageError.find(e=>e.param=='confirmPassword')?'is-invalid':'' %> form-control">
            </div>
            <button type="submit" class="btn btn-info w-100">SignUp</button>
        </form>

        <% if (MessageError.find(e=>e.param=='exists')) { %>
         <div class="alert alert-danger text-center" role="alert">
            email already exists
         </div>
        <% } %>
    </div>
</div>

<%- include('./footer.ejs') %>